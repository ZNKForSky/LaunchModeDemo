<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <Button
        android:id="@+id/btn_start_first_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start FirstActivity"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/btn_start_second_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start SecondActivity"
        android:textAllCaps="false"/>
    <Button
        android:id="@+id/btn_start_third_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start ThirdActivity"
        android:textAllCaps="false"/>
    <Button
        android:id="@+id/btn_start_myselt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start Myselt"
        android:textAllCaps="false"/>


</LinearLayout>